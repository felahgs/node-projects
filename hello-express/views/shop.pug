extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        .grid
            if prods.length > 0
                each product in prods
                    article.card.product-item 
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book")
                        div.card__content
                            h2.product__price $19.00
                            p.product__description Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec euismod quam ut enim feugiat, vitae feugiat purus dignissim.
                        .card__actions
                            button.btn Add to Card
            else
                h1 No Products
                